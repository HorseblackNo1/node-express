/*
  express  通讯  
  get 方法
*/
//引入express框架    
const express = require('express');
//创建网站服务器
const app = express();
app.get('/index', (req, res) => {
    //获取请求参数  通过query获取
    res.send(req.query);
});
//端口监听
app.listen(3000);
console.log('服务器启动成功');
